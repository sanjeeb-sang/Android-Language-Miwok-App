<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:minHeight="88dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="88dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/list_image_view_color"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="8dp">
        <TextView
            android:id="@+id/miwok_language_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Miwok Text"
            style="@style/ListTextViewStyle"
            />

        <TextView
            android:id="@+id/default_language_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="one"
            style="@style/ListTextViewStyle"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/box_for_play_image"
        android:orientation="horizontal"
        style="@style/ListTextViewStyle"
        android:padding="8dp" >


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/play_button_image_view"
        android:background="@drawable/ic_play_arrow"
        android:paddingRight="16dp"
        android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>